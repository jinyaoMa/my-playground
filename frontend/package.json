{
  "workspaces": [
    "utils",
    "components",
    "ui-kit",
    "icons",
    "app",
    "docs"
  ],
  "scripts": {
    "app:dev": "lerna --scope @jinyaoma/my-playground-app exec -- vite",
    "app:build": "lerna --scope @jinyaoma/my-playground-app exec -- vite build --emptyOutDir",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "icons:build": "svgtofont --sources ./icons/svg --output ./icons/fonts",
    "bootstrap": "lerna bootstrap"
  },
  "svgtofont": {
    "outSVGReact": false,
    "outSVGPath": false,
    "emptyDist": true,
    "fontName": "mp-icon",
    "css": {
      "filename": "mp-icon",
      "include": "\\.css$"
    }
  },
  "devDependencies": {
    "lerna": "^5.3.0",
    "lerna-update-wizard": "^1.1.2",
    "vitepress": "^1.0.0-alpha.5",
    "vue": "^3.2.37"
  }
}